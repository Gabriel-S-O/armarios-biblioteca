<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/armarios?useSSL=false&amp;serverTimezone=UTC
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQL8Dialect
        </property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hbm2ddl.auto">update</property>
        <!-- Classes que serÃ£o persistidas no tutorial -->
        <mapping class="br.edu.ifpr.paranavai.armarios.model.Armario" />
        <mapping class="br.edu.ifpr.paranavai.armarios.model.Bibliotecario" />
        <mapping class="br.edu.ifpr.paranavai.armarios.model.Estudante" />
        <mapping class="br.edu.ifpr.paranavai.armarios.model.Pessoa" />
        <mapping class="br.edu.ifpr.paranavai.armarios.model.Reserva" />
    </session-factory>
</hibernate-configuration>
